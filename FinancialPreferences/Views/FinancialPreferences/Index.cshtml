@model FinancialPreferenceViewModel
@{
    ViewData["Title"] = "金融商品喜好清單";
}

<div class="container mt-5">
    <h2 class="mb-4">金融商品喜好清單</h2>

    <div class="d-flex justify-content-between mb-3">
        <button class="btn btn-primary" onclick="openModal()">新增商品</button>
        <form asp-action="Search" method="post">
            <button class="btn btn-success">查詢</button>
        </form>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Preferences[0].ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.Preferences[0].ProductPrice)</th>
                <th>@Html.DisplayNameFor(model => model.Preferences[0].FeeRate)</th>
                <th>@Html.DisplayNameFor(model => model.Preferences[0].OrderQuantity)</th>
                <th>@Html.DisplayNameFor(model => model.Preferences[0].EstimatedTotalAmount)</th>
                <th>@Html.DisplayNameFor(model => model.Preferences[0].TotalFee)</th>
                <th>@Html.DisplayNameFor(model => model.Preferences[0].AccountNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Preferences[0].Email)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Preferences != null)
            {
                foreach (var preference in Model.Preferences)
                {
                    <tr>
                        <td>@preference.ProductName</td>
                        <td>@preference.ProductPrice</td>
                        <td>@preference.FeeRate</td>
                        <td>@preference.OrderQuantity</td>
                        <td>@preference.EstimatedTotalAmount</td>
                        <td>@preference.TotalFee</td>
                        <td>@preference.AccountNumber</td>
                        <td>@preference.Email</td>
                        <td>
                            <button class="btn btn-warning btn-sm me-1" onclick="onEdit()">編輯</button>
                            <button class="btn btn-danger btn-sm" onclick="onDelete()">刪除</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="modal fade" id="addPreferenceModal" tabindex="-1" aria-labelledby="addPreferenceModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="addPreferenceModalLabel">新增金融商品喜好</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="關閉"></button>
                </div>

                <form method="post" asp-action="Add">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="productId" class="form-label">@Html.DisplayNameFor(model => model.Preferences[0].ProductName)</label>
                            <select class="form-select" id="productId" name="ProductId" required onchange="onProductChange()">
                                <option value="">請選擇產品</option>
                                @if (Model.Products != null)
                                {
                                    @foreach (var product in Model.Products)
                                    {
                                        <option value="@product.ProductId"
                                                data-price="@product.Price"
                                                data-fee="@product.FeeRate">
                                            @product.ProductName
                                        </option>
                                    }
                                })
                            </select>
                        </div>

                        <div id="productInfo" style="display:none;">
                            <div class="mb-3">
                                <label for="productPrice" class="form-label">@Html.DisplayNameFor(model => model.Preferences[0].ProductPrice)</label>
                                <input type="text" class="form-control" id="productPrice" disabled />
                            </div>
                            <div class="mb-3">
                                <label for="feeRate" class="form-label">@Html.DisplayNameFor(model => model.Preferences[0].FeeRate)</label>
                                <input type="text" class="form-control" id="feeRate" disabled />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="orderQuantity" class="form-label">@Html.DisplayNameFor(model => model.Preferences[0].OrderQuantity)</label>
                            <input type="number" class="form-control" id="orderQuantity" name="OrderQuantity" min="1" required />
                        </div>

                        <div class="mb-3">
                            <label for="accountNumber" class="form-label">@Html.DisplayNameFor(model => model.Preferences[0].AccountNumber)</label>
                            <select class="form-select" id="accountSelect" name="AccountNumber" required onchange="onAccountChange()">
                                <option value="">請選擇帳號</option>
                                @if (Model.Users != null)
                                {
                                    @foreach (var user in Model.Users)
                                    {
                                        <option value="@user.AccountNumber"
                                                data-name="@user.UserName"
                                                data-email="@user.Email">
                                            @user.AccountNumber
                                        </option>
                                    }
                                })
                            </select>
                        </div>

                        <div id="userInfo" style="display:none;">
                            <div class="mb-3">
                                <label for="userName" class="form-label">@Html.DisplayNameFor(model => model.Preferences[0].UserName)</label>
                                <input type="text" class="form-control" id="userName" disabled />
                            </div>
                            <div class="mb-3">
                                <label for="userEmail" class="form-label">@Html.DisplayNameFor(model => model.Preferences[0].Email)</label>
                                <input type="email" class="form-control" id="userEmail" disabled />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">@Html.DisplayNameFor(model => model.Preferences[0].Email)</label>
                            <input type="email" class="form-control" id="email" name="Email" required />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                        <button type="submit" class="btn btn-primary" onclick="onAdd()">新增</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<script>
    function onAdd() {
        alert('add');
    }

    function onSearch() {
        alert('search');
    }

    function onEdit(id) {
        alert('edit');
    }

    function onDelete(id) {
        if (confirm('delete ID: ' + id + ' ?')) {
            alert('deleted ID: ' + id);
        }
    }

    function onProductChange() {
        const select = document.getElementById('productId');
        const selectedOption = select.options[select.selectedIndex];
        const price = selectedOption.getAttribute('data-price');
        const fee = selectedOption.getAttribute('data-fee');

        if (!select.value) {
            document.getElementById('productInfo').style.display = 'none';
            document.getElementById('productPrice').value = '';
            document.getElementById('feeRate').value = '';
        } else {
            document.getElementById('productPrice').value = price;
            document.getElementById('feeRate').value = fee;
            document.getElementById('productInfo').style.display = 'block';
        }
    }

    function onAccountChange() {
        const select = document.getElementById('accountSelect');
        const selectedOption = select.options[select.selectedIndex];
        const name = selectedOption.getAttribute('data-name');
        const email = selectedOption.getAttribute('data-email');

        if (!select.value) {
            document.getElementById('userInfo').style.display = 'none';
            document.getElementById('userName').value = '';
            document.getElementById('userEmail').value = '';
        } else {
            document.getElementById('userName').value = name;
            document.getElementById('userEmail').value = email;
            document.getElementById('userInfo').style.display = 'block';
        }
    }

    function openModal() {
        const modal = new bootstrap.Modal(document.getElementById('addPreferenceModal'));
        modal.show();
    }
</script>